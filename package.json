{
  "name": "node-red-contrib-beaver",
  "version": "1.0.0",
  "description": "flows recorder for node-red testing",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhangmx/node-red-contrib-beaver.git"
  },
  "bugs": {
    "url": "https://github.com/zhangmx/node-red-contrib-beaver/issues"
  },
  "homepage": "https://github.com/zhangmx/node-red-contrib-beaver#readme",
  "keywords": [
    "node-red",
    "testing"
  ],
  "author": "zhangmx",
  "license": "Apache-2.0",
  "node-red": {
    "version": ">=3.0.0",
    "plugins": {
      "beaver": "dist/index.js"
    }
  },
  "files": [
    "dist",
    "resources"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "modulePaths": [
    "<rootDir>/src/"
  ],
  "scripts": {
    "start": "npm run svr",
    "build": "npx eslint . && npm run statics && npm run plugin && npm run copyfiles",
    "clean": "rimraf dist/ && rimraf resources/",
    "copyfiles": "npm run copy-html && npm run copy-css && npm run copy-locales",
    "copy-html": "copyfiles -f src/plugin/index.html dist",
    "copy-locales": "copyfiles -u 2 ./src/plugin/locales/**/*.json dist",
    "copy-css": "copyfiles -f src/statics/style.css resources",
    "statics": "tsc -p src/statics",
    "plugin": "tsc -p src/plugin",
    "dev": "nodemon --exec 'npm run build' -w src -i tests -i dist -i resources -i demo -i examples -e 'ts html css'",
    "svr": "nodemon --exec 'npm run demo'  -i demo -i src -i tests -i examples -e 'js html css'",
    "demo": "node-red -u ./demo --inspect",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/node-red": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "node-red": "^3.0.2",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "should": "^13.2.3"
  }
}
